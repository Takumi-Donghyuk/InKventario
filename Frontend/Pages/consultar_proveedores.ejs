<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Consultar proveedores</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-b from-orange-50 to-orange-100 min-h-screen p-6">

  <!-- Botón de regreso -->
  <div class="w-full max-w-2xl mb-6 flex justify-center">
    <a href="/admin" 
       class="bg-orange-500 text-white px-6 py-2 rounded-full 
       shadow-lg hover:bg-orange-600 transition-all transform hover:scale-105">
       ⬅ Volver al panel principal
    </a>
  </div>

  <main class="max-w-6xl mx-auto">
    <h1 class="text-3xl font-extrabold text-orange-700 mb-10 text-center">Lista de proveedores</h1>

    <!-- Mosaico de proveedores -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      <% proveedores.forEach(prov => { %>
      <div class="relative bg-orange-50 rounded-3xl shadow-xl p-6 hover:shadow-2xl transition transform hover:-translate-y-2 hover:scale-105 overflow-hidden">
        
        <!-- Círculo decorativo detrás -->
        <div class="absolute -top-10 -right-10 w-24 h-24 bg-gray-700 rounded-full opacity-30 animate-pulse"></div>
        <div class="absolute -bottom-10 -left-10 w-32 h-32 bg-gray-600 rounded-full opacity-20 animate-pulse"></div>

        <!-- Contenido de la tarjeta -->
        <div class="relative z-10 flex flex-col items-center text-center">
        <!-- Icono de proveedor -->
        <svg class="w-16 h-16 mb-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" fill="currentColor">
          <circle cx="32" cy="16" r="12" fill="#3498db"/>
          <path d="M16 52c0-8 16-8 16-8s16 0 16 8v4H16v-4z" fill="#2c3e50"/>
          <rect x="42" y="28" width="14" height="20" rx="2" ry="2" fill="#1abc9c"/>
          <line x1="44" y1="32" x2="54" y2="32" stroke="#ecf0f1" stroke-width="2"/>
          <line x1="44" y1="38" x2="54" y2="38" stroke="#ecf0f1" stroke-width="2"/>
          <line x1="44" y1="44" x2="54" y2="44" stroke="#ecf0f1" stroke-width="2"/>
        </svg>


          <!-- Datos del proveedor -->
          <h2 class="text-xl font-bold text-orange-700"><%= prov.nombre %></h2>
          <p class="text-orange-600 mt-1 text-sm"><strong>Tel:</strong> <%= prov.telefono || 'N/A' %></p>
          <p class="text-orange-600 mt-1 text-sm"><strong>Correo:</strong> <%= prov.correo || 'N/A' %></p>
          <p class="text-orange-600 mt-1 text-sm"><strong>Dirección:</strong> <%= prov.direccion || 'N/A' %></p>
        </div>

      </div>
      <% }) %>
    </div>
  </main>

</body>
</html>
