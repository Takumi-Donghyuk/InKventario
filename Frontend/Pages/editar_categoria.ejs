<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>Modificar categoría</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen p-6">

  <!-- Botón de regreso -->
  <div class="w-full max-w-2xl mb-6 text-center">
    <a href="/admin" 
       class="inline-block bg-emerald-500 text-white px-5 py-2 rounded-lg 
       shadow hover:bg-emerald-600 transition">
       ⬅ Volver al panel principal
    </a>
  </div>

<main class="max-w-6xl mx-auto">
<h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Lista de categorías para actualizar</h1>
</main>

<!-- Tabla -->
<div class="bg-white shadow-md rounded-lg">
  <table class="min-w-full divide-y divide-gray-200 table-auto">
      <thead class="bg-emerald-500 text-white">
        <tr>
          <th class="px-6 py-3 text-center text-sm font-medium uppercase tracking-wider">Nombre</th>
          <th class="px-6 py-3 text-center text-sm font-medium uppercase tracking-wider">Descripción</th>
          <th class="px-6 py-3 text-center text-sm font-medium uppercase tracking-wider">Acción</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% categorias.forEach(cat => { %>
          <tr class="hover:bg-gray-100 transition">
            <td class="px-6 py-4 whitespace-nowrap text-gray-700 font-medium text-center"><%= cat.nombre %></td>
            <td class="px-6 py-4 text-gray-700 text-center"><%= cat.descripcion %></td>
            <td class="px-6 py-4 text-center">
              <a href="/categorias/editar/<%= cat.id_categoria %>"
                 class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded font-semibold transition">
                Modificar
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
  </table>
</div>  

</body>
</html>
