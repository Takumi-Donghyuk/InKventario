<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modificar producto con id</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-b from-red-50 to-red-200 min-h-screen flex flex-col items-center p-6">

    <!-- Botón de regreso -->
    <div class="w-full max-w-md mb-6">
        <a href="/productos/editar" 
           class="block text-center bg-red-500 text-white font-semibold py-2 px-4 rounded-full shadow hover:bg-red-600 transition-all transform hover:scale-105">
           ⬅ Volver a la lista de productos
        </a>
    </div>

    <div class="w-full max-w-3xl bg-red-50 shadow-xl rounded-3xl p-10 relative overflow-hidden">
        <!-- Icono decorativo -->
        <div class="absolute -top-10 -right-10 opacity-20">
            <svg class="w-40 h-40 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" fill="currentColor">
                <rect x="12" y="12" width="40" height="40" rx="8" ry="8" fill="#e74c3c"/>
                <circle cx="32" cy="32" r="10" fill="#f1c40f"/>
            </svg>
        </div>

        <h1 class="text-3xl font-extrabold mb-8 text-center text-red-800">Editar producto</h1>

        <form action="/productos/editar/<%= producto.id_producto %>" method="POST" class="space-y-6">

            <!-- Nombre -->
            <div>
                <label for="nombre" class="block text-red-800 mb-2 font-semibold">Nombre *</label>
                <input type="text" name="nombre" value="<%= producto.nombre %>" required
                       class="w-full border border-red-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 bg-red-50" />
            </div>

            <!-- Precio -->
            <div>
                <label for="precio" class="block text-red-800 mb-2 font-semibold">Precio *</label>
                <input type="number" step="0.01" name="precio" value="<%= producto.precio %>" required
                       class="w-full border border-red-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 bg-red-50" />
            </div>

            <!-- Cantidad -->
            <div>
                <label for="cantidad" class="block text-red-800 mb-2 font-semibold">Cantidad (no editable)</label>
                <input type="number" 
                name="cantidad" 
                disabled 
                placeholder="El valor actual es <%= producto.cantidad %>, está guardado en el historial y no puede editarse"
                class="w-full border border-red-300 rounded-xl px-4 py-3 focus:outline-none 
                focus:ring-2 focus:ring-red-400 bg-red-50" />
            </div>

            <!-- Categoría -->
            <div>
                <label for="categoriaId" class="block text-red-800 mb-2 font-semibold">Categoría *</label>
                <select name="categoriaId" required
                        class="w-full border border-red-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 bg-red-50">
                    <% categorias.forEach(categoria => { %>
                        <option value="<%= categoria.id_categoria %>" 
                            <%= categoria.id_categoria === producto.categoriaId ? "selected" : "" %>>
                            <%= categoria.nombre %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <!-- Marca -->
            <div>
                <label for="marcaId" class="block text-red-800 mb-2 font-semibold">Marca *</label>
                <select name="marcaId" required
                        class="w-full border border-red-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 bg-red-50">
                    <% marcas.forEach(marca => { %>
                        <option value="<%= marca.id_marca %>" 
                            <%= marca.id_marca === producto.marcaId ? "selected" : "" %>>
                            <%= marca.nombre %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <!-- Proveedor -->
            <div>
                <label for="proveedorId" class="block text-red-800 mb-2 font-semibold">Proveedor *</label>
                <select name="proveedorId" required
                        class="w-full border border-red-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 bg-red-50">
                    <% proveedores.forEach(proveedor => { %>
                        <option value="<%= proveedor.id_proveedor %>" 
                            <%= proveedor.id_proveedor === producto.proveedorId ? "selected" : "" %>>
                            <%= proveedor.nombre %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <!-- URL Imagen -->
            <div>
                <label for="url_imagen" class="block text-red-800 mb-2 font-semibold">URL Imagen</label>
                <input type="text" name="url_imagen" value="<%= producto.url_imagen %>"
                       class="w-full border border-red-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 bg-red-50" />
            </div>

            <!-- Botón -->
            <button type="submit"
                    class="w-full bg-red-500 hover:bg-red-600 text-white py-3 px-4 rounded-2xl font-bold shadow-lg transition-all transform hover:scale-105">
                Actualizar producto
            </button>
        </form>
    </div>

</body>
</html>
